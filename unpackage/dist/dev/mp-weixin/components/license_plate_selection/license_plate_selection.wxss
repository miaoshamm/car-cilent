.card {
  height: 209rpx;
  border: 1px solid #fff;
  border-radius: 16rpx;
  background: linear-gradient(180deg, #FCF0F3 0%, #FFFFFF 26%, #FFFFFF 100%);
  box-sizing: border-box;
  padding: 24rpx;
}
.card .input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 22rpx;
}
.card .input_card {
  width: 66rpx;
  height: 80rpx;
  background-color: #F6F7F8;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #3D3D3D;
  font-weight: normal;
  display: flex;
  justify-content: center;
  align-items: center;
}
.card .input_card_new {
  width: 66rpx;
  height: 80rpx;
  border: 1px dashed #DFA0B1;
  box-sizing: border-box;
  background-color: #FDE6EC;
  border-radius: 8rpx;
  color: #81335E;
  font-size: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}